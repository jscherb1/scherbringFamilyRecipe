# Cosmos DB configuration
COSMOS_ENDPOINT=your_cosmos_endpoint_here
COSMOS_KEY=your_cosmos_key_here
COSMOS_DB_NAME=RecipeApp

# Azure Storage configuration for recipe images
# Get these from your Azure Storage Account in the Azure Portal
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name_here
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key_here
AZURE_STORAGE_CONTAINER_NAME=recipe-images

# Feature flags
FEATURE_AI=false
FEATURE_IMPORT=false

# Azure AI Foundry Configuration
AZURE_AI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_AI_API_KEY=your-api-key
AZURE_AI_API_VERSION=2024-02-01
AZURE_AI_DEPLOYMENT_NAME=your-deployment-name
# New: DALL-E-3 deployment for AI image generation
AZURE_AI_DALLE_DEPLOYMENT_NAME=your-dalle-deployment-name

#TODOIST Variables
TODOIST_API_KEY=your_api_key

# Google Calendar Integration (OAuth2 Web Application)
# Get this from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id.googleusercontent.com